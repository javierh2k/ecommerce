{
  "name": "javier-react-ssr",
  "description": "MELI ecommerce SSR",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Javier Holguin",
  "license": "MIT",
  "scripts": {
    "prod:server": "cross-env NODE_ENV=production webpack --config webpack/webpack.server.config.js",
    "prod:client": "cross-env NODE_ENV=production webpack --config webpack/webpack.client.config.js",
    "prod:build": "npm run prod:server && npm run prod:client",
    "dev:watch": "webpack --watch  --config webpack/webpack.server.config.js",
    "dev:server": "nodemon dist/server.js",
    "api": "npm-run-all --parallel dev:watch dev:server",
    "front": "cross-env HOTRELOAD=true node dist/server.js",
    "build:server": "webpack --mode development --config webpack/webpack.server.config.js",
    "client": "webpack --mode development --config webpack/webpack.client.config.js",
    "test:client": "cross-env NODE_ENV=test jest --maxWorkers=50%",
    "test:server": "cross-env NODE_ENV=test jest --config ./src/server/jest.config.js --maxWorkers=50%"
  },
  "engines": {
    "node": "^18.14.0 || >=18.0.0"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.6.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.46",
    "@swc/jest": "^0.2.24",
    "@swc/register": "^0.1.10",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@testing-library/user-event": "^14.4.3",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "jest-extended": "^3.2.4",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^2.7.5",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "react-dev-utils": "^12.0.1",
    "react-hydration-provider": "^1.0.2",
    "require-context": "^1.1.0",
    "sass": "^1.61.0",
    "sass-loader": "^10.4.1",
    "serve-favicon": "^2.5.0",
    "style-loader": "^3.3.2",
    "swc-loader": "^0.2.3",
    "typescript": "^5.0.4",
    "undici": "^5.21.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "process": "^0.11.10",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "file-loader": "^6.2.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@svgr/webpack": "^7.0.0",
    "supertest": "^6.3.3",
    "serialize-javascript": "^6.0.0",
    "terser-webpack-plugin": "^5.3.7",
    "util": "^0.12.5",
    "assert": "^2.0.0",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-node-externals": "^3.0.0",
    "webpack-dev-middleware": "^6.0.2",
    "ws": "^8.5.0"
  },
  "dependencies": {
    "helmet": "^6.1.1",
    "history": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.10.0"
  }
}
